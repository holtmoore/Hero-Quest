<% } %> -->
<% if (!user.active_quest) { %>
  <form action="/accept" method="get">
    <input type="submit" value="Accept Quest" class="btn">
  </form>
<% } else { %>
  <form action="/complete" method="get">
    <input type="submit" value="Quest Completed" class="btn">
  </form>
<% } %>

<form action="/users/update" method="get">
  <input type="submit" value="Update Profile" class="btn btn-primary">
</form>

<form action="/users/delete" method="post">
  <input type="submit" value="Delete Account">
</form>

<!-- This is where the timeline will be added later -->

<form action="/logout" method="get">
  <input type="submit" value="Log Out">
</form>


